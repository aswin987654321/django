FROM ubuntu:latest

WORKDIR /app

# Install apt-utils, tzdata, Python, and venv
RUN apt-get update && \
    apt-get install -y apt-utils tzdata python3 python3-pip python3-venv

# Create a virtual environment
RUN python3 -m venv /app/venv

# Activate the virtual environment and update pip
ENV PATH="/app/venv/bin:$PATH"
RUN pip install --upgrade pip

# Copy the requirements.txt file
COPY requirements.txt /app/

# Install Python dependencies inside the virtual environment
RUN pip install -r requirements.txt

# Copy the rest of the application code
COPY mysite /app/mysite

# Expose the port that Django will run on
EXPOSE 8000

# Set the entrypoint and command to run the Django development server
ENTRYPOINT ["python3", "mysite/manage.py"]
CMD ["runserver", "0.0.0.0:8000"]
