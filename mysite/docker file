# Use an official Ubuntu base image
FROM ubuntu:latest

# Set the working directory inside the container
WORKDIR /app

# Copy the requirements.txt file first to leverage Docker cache
COPY requirements.txt /app/

# Install necessary packages and Python dependencies
RUN apt-get update && \
    apt-get install -y python3 python3-pip && \
    pip install -r requirements.txt

# Copy the rest of the application code
COPY mysite /app/mysite

# Set an environment variable to handle potential issues with system packages
ENV PIP_BREAK_SYSTEM_PACKAGES 1

# Expose the port that Django will run on
EXPOSE 8000

# Set the entrypoint and command to run the Django development server
ENTRYPOINT ["python3", "mysite/manage.py"]
CMD ["runserver", "0.0.0.0:8000"]
